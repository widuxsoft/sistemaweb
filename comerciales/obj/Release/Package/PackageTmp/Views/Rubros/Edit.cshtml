@model comerciales.Contexto.tamp_rubros
@{
    ViewBag.Title = "Editar Rubro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <header id="page-header">
        <i class="glyphicon glyphicon-pencil"></i>
        <h1> Editar Rubro</h1>
    </header>
    <div class="panel-heading panel-heading-transparent">
        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Datos de Rubro</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>
                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                @Html.HiddenFor(model => model.cod_rubro)

                <div class="form-group">
                    <div class="control-label col-md-2">Rubro</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <button type="button" class="btn btn-info" onclick="location.href= '@Url.Action("index")'">Volver</button>
                    </div>
                </div>

            </div>
            <!-- /panel content -->
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-success" onclick="location.href= '@Url.Action("Create","Subrubros",new { cod_rubro= Model.cod_rubro })'">Agregar Subrubro</button>
        </div>


        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Listado de Subrubros</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>

                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th class="text-center">Cod. Subrubro</th>
                            <th class="text-center">Descripción</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model.tam_subrubros)
                {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.cod_subrubro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>

                            <td class="text-center">
                                <button type="button" class="btn btn-info btn-xs" onclick="location.href= '@Url.Action("edit","Subrubros",new { id=item.cod_subrubro })'">Editar</button>
                                <button type="button" class="btn btn-danger btn-xs" onclick="location.href= '@Url.Action("delete","Subrubros",new { id=item.cod_subrubro })'">Eliminar</button>

                            </td>
                        </tr>
                    }
                </table>

                <!-- CSS DATATABLE -->
                <link href="assets/css/layout-datatable.css" rel="stylesheet" type="text/css" />



            </div>


        </div>
        <!-- /panel content -->
    </div>




}