@model comerciales.Contexto.tam_productos

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <header id="page-header">
        <i class="glyphicon glyphicon-pencil"></i>
        <h1> Editar Producto</h1>
    </header>
    <div class="panel-heading panel-heading-transparent">
        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Datos Producto</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" ></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" ><i class="fa fa-expand"></i></a></li>                   
                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="control-label col-md-2">Cod. Producto</div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">Nombre</div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">Descripcion</div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.precio_costo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.precio_costo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_costo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">Precio Venta</div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.precio_venta, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.precio_venta, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cod_marca, "cod_marca", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("cod_marca", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.cod_marca, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cod_rubro, "cod_rubro", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("cod_rubro", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.cod_rubro, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_proveedor, "id_proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("id_proveedor", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_proveedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.estado, "estado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => Model.estado, new List<SelectListItem>
                                { new SelectListItem{Text="ACTIVO", Value="0"},
                                    new SelectListItem{Text="INACTIVO", Value="1"}})

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="control-label col-md-2">Fecha Creación</div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control",@readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.fecha_creacion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    @Html.HiddenFor(model => model.id)

                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <button type="button" class="btn btn-info" onclick="location.href= '@Url.Action("index")'">Volver</button>
                    </div>
                </div>
            </div>
            <!-- /panel content -->

        </div>

        <div class="form-group">
            <button type="button" class="btn btn-success" onclick="location.href= '@Url.Action("create","ColoresProductos",new { id_Producto= Model.id })'">Agregar Color</button>
        </div>
        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Datos Colores</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" ></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" ><i class="fa fa-expand"></i></a></li>                    
                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th class="text-center">Color</th>
                            <th class="text-center">Acciones</th>
                            
                        </tr>
                    </thead>

                    @foreach (var item in Model.tar_colores_productos )
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.tam_colores.color )
                            </td>
                            
                            <td class="text-center">
                                <button type="button" class="btn btn-info btn-xs" onclick="location.href= '@Url.Action("edit","ColoresProductos",new { id=item.id })'">Editar</button>
                                <button type="button" class="btn btn-danger btn-xs" onclick="location.href= '@Url.Action("delete","ColoresProductos",new { id=item.id })'">Eliminar</button>

                            </td>
                        </tr>
                    }
                </table>



            </div>

            <!-- /panel content -->

        </div>        
        <div class="form-group">
            <button type="button" class="btn btn-success" onclick="location.href= '@Url.Action("create","ProductosImagen",new { id_Producto= Model.id })'">Agregar Imagen</button>
        </div>
        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Datos Imagenes</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>
                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th class="text-center">Orden</th>
                            <th class="text-center">Archivo</th>
                            <th class="text-center">Principal</th>
                            <th class="text-center">Accion</th>

                        </tr>
                    </thead>

                    @foreach (var item in Model.tap_productos_imagen )
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.cod_imagen )
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.nombre_archivo )
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.principal )
                            </td>

                            <td class="text-center">
                                <button type="button" class="btn btn-info btn-xs" onclick="location.href= '@Url.Action("edit","ColoresProductos",new { id=item.id })'">Editar</button>
                                <button type="button" class="btn btn-danger btn-xs" onclick="location.href= '@Url.Action("delete","ColoresProductos",new { id=item.id })'">Eliminar</button>

                            </td>
                        </tr>
                    }
                </table>



            </div>

            <!-- /panel content -->

        </div>
        
    </div>

}

       
