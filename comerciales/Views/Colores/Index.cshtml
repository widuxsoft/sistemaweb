@model IEnumerable<comerciales.Contexto.tam_colores>

@{
    ViewBag.Title = "Colores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header id="page-header">
    <i class="glyphicon glyphicon-tint"></i>
    <h1>  Datos de Colores</h1>
</header>

<div class="panel-heading panel-heading-transparent">
    <p>
        <button type="button" class="btn btn-success" onclick="location.href= '@Url.Action("create")'">Agregar Color</button>
    </p>

    <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

        <div class="panel-heading">

            <span class="elipsis">
                <!-- panel title -->
                <strong>Listado de Colores</strong>
            </span>

            <!-- right options -->
            <ul class="options pull-right list-inline">
                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>                
            </ul>
            <!-- /right options -->

        </div>

        <!-- panel content -->
        <div class="panel-body">
            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">                
                <tr>
                    <th class="text-center">Cod. Color</th>
                    <th class="text-center">Color</th>                    
                    <th class="text-center">Acción</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.color)
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-info btn-xs" onclick="location.href= '@Url.Action("edit",new { id=item.id })'">Editar</button>                            
                            <button type="button" class="btn btn-danger btn-xs" onclick="location.href= '@Url.Action("delete",new { id=item.id })'">Eliminar</button>
                        </td>
                    </tr>
                }

            </table>


        </div>
        <!-- /panel content -->

    </div>
</div>

