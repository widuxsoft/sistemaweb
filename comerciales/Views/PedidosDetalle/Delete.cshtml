@model comerciales.Contexto.tar_pedidos_detall

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   <header id="page-header">
        <i class="glyphicon glyphicon-trash"></i>
        <h1> Eliminar Item</h1>
    </header>

<h3>¿Está seguro que desea eliminar este item del pedido?</h3>

<div class="panel-heading panel-heading-transparent">
    <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

        <div class="panel-heading">

            <span class="elipsis">
                <!-- panel title -->
                <strong>Datos Item</strong>
            </span>

            <!-- right options -->
            <ul class="options pull-right list-inline">
                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" ><i class="fa fa-expand"></i></a></li>
                
            </ul>
            <!-- /right options -->

        </div>

        <!-- panel content -->
        <div class="panel-body">

            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Producto:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tam_productos.nombre)
                    </dd>
                    <dt>
                        Cantidad:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.cantidad)
                    </dd>

                    <dt>
                        Precio:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.precio)
                    </dd>

                    <dt>
                        Total:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.total)
                    </dd>
                                       
                </dl>


            </div>
        <!-- /panel content -->

    </div>
</div>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <input type="submit" value="SI" class="btn btn-primary" />
            <button type="button" class="btn btn-info" onclick="location.href= '@Url.Action("edit","Pedidos",new { id=Model.id_pedido })'">NO</button>
        }    
    </div>
