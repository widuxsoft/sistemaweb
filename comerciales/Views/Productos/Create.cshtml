@model comerciales.Contexto.tam_productos

@{
    ViewBag.Title = "Agregar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <header id="page-header">
        <i class="main-icon fa fa-pencil-square-o"></i>
        <h1> Agregar Producto</h1>
    </header>
    <hr />
    <div class="panel-heading panel-heading-transparent">
        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Datos Producto</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>
                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                <div class="form-horizontal">


                    <div class="form-group">
                        <div class="control-label col-md-2">Nombre</div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">Descripción</div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.precio_costo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.precio_costo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_costo, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="control-label col-md-2">Precio Venta</div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.precio_venta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_venta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cod_marca, "cod_marca", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("cod_marca", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.cod_marca, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cod_rubro, "cod_rubro", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("cod_rubro", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.cod_rubro, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_proveedor , "id_proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("id_proveedor", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_proveedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.estado, "estado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => Model.estado, new List<SelectListItem>
                                { new SelectListItem{Text="ACTIVO", Value="0"},
                                    new SelectListItem{Text="INACTIVO", Value="1"}})

                        </div>
                     </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <button type="button" class="btn btn-info" onclick="location.href= '@Url.Action("index")'">Volver</button>

                            </div>
                        </div>

                    </div>

                <!-- /panel content -->
            </div>
        </div>


    </div>
}