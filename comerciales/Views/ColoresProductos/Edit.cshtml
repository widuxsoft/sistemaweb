@model comerciales.Contexto.tar_colores_productos

@{
    ViewBag.Title = "Editar Color";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <header id="page-header">
        <i class="glyphicon glyphicon-pencil"></i>
        <h1> Editar Color</h1>
    </header>
    <div class="panel-heading panel-heading-transparent">
        <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

            <div class="panel-heading">

                <span class="elipsis">
                    <!-- panel title -->
                    <strong>Datos de Marca</strong>
                </span>

                <!-- right options -->
                <ul class="options pull-right list-inline">
                    <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom"></a></li>
                    <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>
                </ul>
                <!-- /right options -->

            </div>

            <!-- panel content -->
            <div class="panel-body">

                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.id_producto )

                <div class="form-group">
                    @Html.LabelFor(model => model.id_color, "id_color", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("id_color", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.id_color, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <button type="button" class="btn btn-info" onclick="location.href= '@Url.Action("edit","Productos",new { id=Model.id_producto })'">Volver</button>
                    </div>
                </div>

            </div>
            <!-- /panel content -->
        </div>
    </div>

}