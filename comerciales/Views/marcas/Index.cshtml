@model IEnumerable<comerciales.Contexto.tam_marcas>

@{
    ViewBag.Title = "Marcas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header id="page-header">
    <i class="glyphicon glyphicon-flag"></i>
    <h1>  Listado de Marcas</h1>
</header>
<div class="panel-heading panel-heading-transparent">
    <p>
        <button type="button" class="btn btn-success" onclick="location.href= '@Url.Action("create")'">Agregar Marca</button>
    </p>

    <div id="panel-misc-portlet-color-r3" class="panel panel-primary">

        <div class="panel-heading">

            <span class="elipsis">
                <!-- panel title -->
                <strong>LISTADO DE MARCAS</strong>
            </span>

            <!-- right options -->
            <ul class="options pull-right list-inline">
                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" ></a></li>
                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom"><i class="fa fa-expand"></i></a></li>          
            </ul>
            <!-- /right options -->

        </div>

        <!-- panel content -->
        <div class="panel-body">

            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                <tr>
                    <th class="text-center">Cod. Marca</th>
                    <th class="text-center">Descripcion</th>
                    <th class="text-center">Acción</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cod_marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-info btn-xs" onclick="location.href= '@Url.Action("edit",new { id=item.cod_marca})'">Editar</button>
                            <button type="button" class="btn btn-danger btn-xs" onclick="location.href= '@Url.Action("delete",new { id=item.cod_marca })'">Eliminar</button>
                        </td>
                    </tr>
                }

            </table>



        </div>
        <!-- /panel content -->

    </div>
</div>
