@model comerciales.Contexto.tap_productos_imagen

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "ProductosImagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Imagenes </h4>
        <hr />
        <div class="form-group">
            <label class="form-control"></label>
            <div class="col-md-10">
                <input type="file" class="form-control" name="file" />
                <input type="hidden" name="model.cod_imagen" value="1" />
                <input type="hidden" name="model.principal" value="1" />
                <input type="hidden" name="model.fecha_creacion" value="@DateTime.Today.ToString("dd/MM/yyyy")" />
                <input type="hidden" name="model.id_producto" value=@ViewBag.id_producto />
                <input type="hidden" name="id_producto" value=@ViewBag.id_producto />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
